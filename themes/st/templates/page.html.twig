{#
/**
 * @file It overrides the page template.
 */
#}
<div class="l-container">

  <header role="banner">
    <div class="first">
      <div class="logo-place">
        {% if logo %}
          <a href="{{ front_page }}" title="{{ 'Home'|t }}" rel="home">
            <img src="{{ logo }}" alt="{{ 'Home'|t }}"/>
          </a>
        {% endif %}
      </div>
      {% if site_name or site_slogan %}
        <div class="name-and-slogan">
          {% if title %}
            <strong class="site-name">
              <a href="{{ front_page }}" title="{{ 'Home'|t }}" rel="home">{{ site_name }}</a>
            </strong>
          {% else %}
            <h1 class="site-name">
              <a href="{{ front_page }}" title="{{ 'Home'|t }}" rel="home">{{ site_name }}</a>
            </h1>
          {% endif %}

          {% if site_slogan %}
            <div class="site-slogan">{{ site_slogan }}</div>
          {% endif %}
        </div>
      {% endif %}
    </div>
    <div class="second">
      {{ page.language_switcher }}
      {{ page.header }}
      {% if main_menu %}
        <nav role="navigation" class="main-menu">
          {{ main_menu }}
        </nav>
      {% endif %}
    </div>
  </header>

  {{ messages }}

  {{ page.help }}

  <main role="main">
    <div class="l-content">
      {{ page.highlighted }}
      {{ title_prefix }}
      {% if title %}
        <h1>{{ title }}</h1>
      {% endif %}
      {{ title_suffix }}
      {{ tabs }}
      {% if action_links %}
        <nav class="action-links">{{ action_links }}</nav>
      {% endif %}
      {{ page.content }}
      {{ feed_icons }}
    </div>{# /.l-content #}

    {% if page.sidebar_second %}
      <aside class="l-sidebar-second" role="complementary">
        {{ page.sidebar_second }}
      </aside>
    {% endif %}

  </main>

  <footer role="contentinfo">
    <div class="footer_first">{{ page.footer_first }}</div>
    <div class="footer_second">{{ page.footer_second }}</div>
    <div class="copyright">2013</div>
  </footer>
  <div class="hidden">
    {{ page.hidden }}
  <div>

</div>{# /.l-container #}
